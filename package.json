{
  "name": "iot-api",
  "version": "1.0.0",
  "description": "API IoT avec Fastify, Prisma, MQTT, JWT, Zod",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "esbuild src/index.ts --bundle --platform=node --outdir=dist --sourcemap",
    "start": "node dist/index.js",
    "db:migrate": "prisma migrate deploy",
    "db:generate": "prisma generate",
    "db:seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@fastify/cors": "^8.4.0",
    "@fastify/jwt": "^9.1.0",
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.0.0",
    "fastify": "^4.0.0",
    "mqtt": "^5.0.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^20.0.0",
    "esbuild": "^0.19.0",
    "prisma": "^5.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0"
  }
}