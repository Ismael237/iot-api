# Exemple de configuration .env pour l'API IoT

# URL de connexion à la base PostgreSQL
DATABASE_URL=postgresql://user:password@localhost:5432/iot_db

# URL du broker MQTT (ex: mqtt://localhost:1883)
MQTT_BROKER_URL=mqtt://localhost:1883
# Identifiants MQTT (optionnels)
MQTT_USERNAME=
MQTT_PASSWORD=

# Clé secrète JWT (minimum 32 caractères)
JWT_SECRET=changez-moi-avec-une-cle-secrete-tres-longue-32car
# Durée d'expiration des tokens (ex: 30m pour access, 7d pour refresh)
JWT_ACCESS_EXPIRES=30m
JWT_REFRESH_EXPIRES=7d

# Environnement (development ou production)
NODE_ENV=development
# Port d'écoute de l'API
PORT=3000
# Niveau de log (info, debug, error)
LOG_LEVEL=info

# Intervalle d'évaluation des règles d'automatisation (en ms)
AUTOMATION_INTERVAL=10000

# Origines autorisées pour CORS (ex: http://localhost:5173)
CORS_ORIGIN=http://localhost:5173